[core]
	editor = nvim
	pager = less
	excludesfile = ~/.gitignore

[alias]
	aa = add --all

	# BRANCHES
	br = !git --no-pager branch
	bv = !git --no-pager branch -v
	ba = branch -ra
	bd = branch -D
	bm = branch -m

	# COMMITS
	ca = commit --amend
	cm = commit -am
	cmn = commit -amn
	ci = commit -a -v
	can = commit -v -a --no-edit --amend

	# CHECKOUTS
	co = checkout
	cb = checkout -b

	di = diff
	dum = diff upstream/master
	dh = rev-parse HEAD

	# LOG RELATED
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	#lh = --no-pager log --numstat -4
	lg = log --graph --oneline --decorate

	ri = rebase -i
	rom = rebase master
	rum = rebase upstream/master
	#ro = rebase --onto
	rba = rebase --abort
	rbs = rebase --skip
	rbc = rebase --continue

	mf = merge --ff -v
	mm = merge --no-ff
	ms = merge --squash

	pl = pull -v
	plff = pull --ff-only
	st = status --short --branch
	tg = tag -a

	p = push
	pt = push --tags
	pf = push -f
	pm = push master

	po = push origin
	pof = push -f origin

	pu = push upstream
	pum = push upstream master
	pom = push origin master
	pomf = push -f origin master
	pon = push origin next
	ponf = push -f origin next

	un = reset --hard
	unum = reset --hard upstream/master
	unun = reset --hard upstream/next

	last = log -1 HEAD
	undo = checkout HEAD --
	unstage = reset HEAD --

	fu = fetch upstream
	fo = fetch origin

	sl = stash list
	sp = stash pop
	ss = stash show -v
	sc = stash clear

	rs = remote show
	rso = remote show origin
	permission-reset = !git diff -p -R | grep -E \"^(diff|(old|new) mode)\" | git apply

[color]
	grep = auto
	diff = auto
	status = auto
	branch = auto

[branch]
	autosetuprebase = always
[http]
	sslverify = false
[push]
	default = current
[merge]
	tool = bc3
[mergetool]
	bc3 = trustExitCode
[diff]
	tool = bc3
[difftool]
	bc3 = trustExitCode
