set secure

" Use Vim settings, rather than Vi settings (much better!).
" This must be first, because it changes other options as a side effect.
scriptencoding utf-8
set encoding=utf-8

set nocompatible

" Disable modeline security vulns
set modelines=0

" Tab / Auto Indent Settings
set autoindent
set smartindent
set noexpandtab
set copyindent
set preserveindent
set shiftwidth=3
set softtabstop=3
set tabstop=3

set list
set listchars=eol:¬,tab:▸\ ,trail:·,extends:>,precedes:·,nbsp:·

set clipboard=unnamed
" Wrapping
"set nowrap
"set textwidth=72
"set colorcolumn=80
"set formatoptions=qrn1
"set sidescroll=5

" wildmenu completion
set wildmenu
set wildmode=list:longest

set wildignore+=.hg,.git,.svn                    " version control
set wildignore+=*.aux,*.out,*.toc                " latex intermediate files
" set wildignore+=*.jpg,*.bmp,*.gif,*.png,*.jpeg   " binary images
set wildignore+=*.ai,*.psd   " binary images
set wildignore+=*.o,*.obj,*.exe,*.dll,*.manifest " compiled object files
set wildignore+=*.scssc                          " Compiled scss files
set wildignore+=*.spl                            " compiled spelling word lists
set wildignore+=*.sw?                            " vim swap files
set wildignore+=*.ds_store,.DS_Store,.ds_store   " osx stuffs
set wildignore+=vendor/bundle/*,vendor/cache/*   " Gem bundle
set wildignore+=node_modules/*                   " Node modules
set wildignore+=tmp/*                            " tmp files

" backup and swap
set undodir=~/.tmp/neovim/undo
set backupdir=~/.tmp/neovim/backup
set directory=~/.tmp/neovim/swap
set undolevels=1000
set undoreload=10000
set undofile
set backup

syntax enable
set t_Co=256  " make use of 256 terminal colors
set termguicolors

" color scheme
set bg=dark
colorscheme distinguished

" let ayucolor="light"  " for light version of theme
" let ayucolor="mirage" " for mirage version of theme
" let ayucolor="dark"   " for dark version of theme
" colorscheme ayu

" random settings
set backspace=indent,eol,start
set history=1000                   " keep 50 lines of command line history
set ruler                          " show the cursor position all the time
set showcmd                        " display incomplete commands
set incsearch                      " do incremental searching
set encoding=utf-8
set scrolloff=5
set pastetoggle=<f6>
" set showmode
set noshowmode
set hidden                         " buffers with edits can exist without being 'open'
set wildmenu
set wildmode=list:longest
set visualbell
set ttyfast
set backspace=indent,eol,start     " allow backspacing over everything in insert mode
set laststatus=2
" set relativenumber
set number

set viewoptions=folds,cursor
set sessionoptions=folds

" Get rid of save confirmation message
set shortmess=aWAT
set cmdheight=2
set report=99999

" searching and movement ====================================================
set ignorecase
set smartcase
set gdefault
set incsearch
set showmatch
set hlsearch

" au BufWinLeave ?* mkview 1
" au BufWinEnter ?* silent loadview 1

set mouse=a

" ACK / Search settings
if executable('ag')
	let g:ackprg = 'ag --vimgrep'
endif


" Hightlight console.log statements
" highlight ConsoleLogStmnt cterm=bold term=bold ctermbg=13 ctermfg=236
" match ConsoleLogStmnt /console\.log/

" Make the background transparent
" hi Normal guibg=NONE ctermbg=NONE
"
let g:LanguageClient_useVirtualText = 0
